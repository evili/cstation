menu "OpenLCB CAN options"

config OLCAN_LED_ERROR_ACTIVE_MS
	int "OpenLCB CAN: Error Active blink half-period (ms)"
	default 1000
	range 10 10000
	help
	  Blink half-period in milliseconds for Error Active state. Full period will be 2x this value.

config OLCAN_LED_ERROR_PASSIVE_MS
	int "OpenLCB CAN: Error Passive blink half-period (ms)"
	default 100
	range 10 1000
	help
	  Blink half-period in milliseconds for Error Passive state.

config OLCAN_LED_TX_MS
	int "OpenLCB CAN: TX LED flash duration (ms)"
	default 1
	range 1 1000
	help
	  Duration in milliseconds for the short green TX LED flash (led0).

config OLCAN_LED_RX_MS
	int "OpenLCB CAN: RX LED flash duration (ms)"
	default 1
	range 1 1000
	help
	  Duration in milliseconds for the short blue RX LED flash (led1).

endmenu
